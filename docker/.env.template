# GO-Commerce Environment Configuration Template
# Copy this file to .env and update with your production values
# DO NOT commit .env files containing production credentials to version control

# ======================
# Database Configuration
# ======================
# MariaDB Root Password (Required for production)
DB_ROOT_PASSWORD=your_secure_root_password_here

# Application Database Configuration
DB_NAME=gocommerce
DB_USERNAME=gocommerceuser
DB_PASSWORD=your_secure_db_password_here
DB_HOST=localhost
DB_PORT=3306

# Note: DB_USERNAME is used for both application and schema management operations
# This simplifies the database user management while maintaining security through environment variables

# ======================
# Keycloak Configuration
# ======================
# Keycloak Admin Credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_admin_password_here

# Keycloak Database Configuration
KEYCLOAK_DB_SCHEMA=keycloak
KEYCLOAK_DB_USERNAME=keycloak
KEYCLOAK_DB_PASSWORD=your_secure_keycloak_db_password_here

# Keycloak Service Configuration
KEYCLOAK_PORT=9000

# ======================
# Application Configuration
# ======================
# Add other application-specific environment variables here
# QUARKUS_PROFILE=prod
# QUARKUS_HTTP_PORT=8080

# ======================
# Security Notes
# ======================
# 1. Use strong, unique passwords for all services
# 2. Consider using environment variable injection from CI/CD systems
# 3. For Kubernetes deployments, use Secrets and ConfigMaps
# 4. Rotate passwords regularly in production environments
# 5. Never commit .env files with real credentials to version control

