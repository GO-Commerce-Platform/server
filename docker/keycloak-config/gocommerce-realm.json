          "name": "store-roles-script-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-script-mapper",
          "consentRequired": false,
          "config": {
            "script": "var storeRoles = {};\nvar storeIdAttribute = user.getAttribute('storeId');\n\nif (storeIdAttribute && storeIdAttribute.length > 0) {\n    var userStoreId = storeIdAttribute[0];\n    var userAssignedRealmRoles = user.getRealmRoleMappings();\n    var rolesInStore = [];\n\n    for (var i = 0; i < userAssignedRealmRoles.size(); i++) {\n        var roleModel = userAssignedRealmRoles.get(i);\n        var roleName = roleModel.getName();\n        \n        if (roleName === \"STORE_ADMIN\" || \n            roleName === \"PRODUCT_MANAGER\" || \n            roleName === \"ORDER_MANAGER\" ||\n            roleName === \"CUSTOMER_SERVICE\") {\n            rolesInStore.push(roleName);\n        }\n    }\n\n    if (rolesInStore.length > 0) {\n        storeRoles[userStoreId] = rolesInStore;\n    }\n}\n\nexports = storeRoles;",
            "id.token.claim": "false",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "multivalued": "false",
            "jsonType.label": "JSON",
            "claim.name": "store_roles"
          }
        }
      ]
    }
